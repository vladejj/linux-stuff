[Unit]
Description=Set Remembered Battery Charge Threshold From File
After=multi-user.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'THRESHOLD=$(cat /home/YOUR_USERNAME/.config/battery-limit/threshold 2>/dev/null || echo 80); echo "$THRESHOLD" > /sys/class/power_supply/BAT0/charge_control_end_threshold'
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
